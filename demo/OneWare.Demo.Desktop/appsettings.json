{
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "shared": true,
                    "flushToDiskInterval": "00:00:01"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId" ],
        "Properties": {
            "Application": "One-Ware"
        }
    }
}
