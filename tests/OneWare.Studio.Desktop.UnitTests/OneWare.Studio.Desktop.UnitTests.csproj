<Project Sdk="Microsoft.NET.Sdk">

	<!-- Import shared build props for XUnit testing and Autofac dependency injection -->
	<Import Project="..\..\build\props\XUnit.props" />
	<Import Project="..\..\build\props\Autofac.props" />

	<PropertyGroup>
		<!-- Target .NET 9.0 -->
		<TargetFramework>net9.0</TargetFramework>

		<!-- Output type set as a library -->
		<OutputType>Library</OutputType>

		<!-- Mark this as a test project -->
		<IsTestProject>true</IsTestProject>

		<!-- Disable automatic generation of assembly info -->
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>

		<!-- Generate runtime config files -->
		<GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>

		<!-- Enable nullable reference types -->
		<Nullable>enable</Nullable>

		<!-- Prevent packing this test project into NuGet -->
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<!-- Reference the main desktop studio project -->
		<ProjectReference Include="..\..\studio\OneWare.Studio.Desktop\OneWare.Studio.Desktop.csproj" />
	</ItemGroup>

</Project>
